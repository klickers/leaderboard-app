---
import Layout from "../layouts/Layout.astro"
import { Icon } from "astro-icon/components"

---

<Layout>
	<main>
		<section
			style="background: linear-gradient(180.00deg, rgba(255, 255, 255, 0) 40%, white 100%), linear-gradient(90deg, var(--color-lightgreen), var(--color-lightblue) 100%);"
			class="pt-36 pb-52 px-8 text-center"
		>
			<h1 class="">Create a Leaderboard</h1>
			<p class="text-lg max-w-5xl mx-auto">
				Cheer on your friends, or challenge them to a (definitely 100%
				friendly) competition!
			</p>
			<div class="flex gap-6 mt-8 justify-center">
				<!-- <a
					href="#!"
					class="button button--secondary"
				>
					Login
				</a> -->
				<a
					href="#!"
					class="button button--primary"
				>
					Create a board
				</a>
			</div>
			<p class="text-xs mt-2 text-gray-700">
				Already have an account? <a
					href="#!"
					class="underline"
				>
					Login here
				</a>.
			</p>
			<div
				class="text-left mt-24 max-w-5xl mx-auto p-8 border-2 border-gray-300 rounded-3xl bg-white"
			>
				<h3 class="mb-2">Novel November</h3>
				<div class="flex gap-4 mb-6">
					<p class="flex gap-1 items-center text-sm text-gray-500">
						<Icon name="gravity-ui:target-dart" />50000 words
					</p>
					<p class="flex gap-1 items-center text-sm text-gray-500">
						<Icon name="gravity-ui:calendar" />ends Nov 30th
					</p>
					<p class="flex gap-1 items-center text-sm text-gray-500">
						<Icon name="gravity-ui:persons" />5 participants
					</p>
				</div>
				<script
					is:inline
					src="https://cdn.jsdelivr.net/npm/chart.js"
				></script>
				<canvas id="progressChart"></canvas>

				<script is:inline>
					const ctx = document
						.getElementById("progressChart")
						.getContext("2d")

					const progressChart = new Chart(ctx, {
						type: "line",
						data: {
							labels: Array.from({ length: 30 }, (_, i) => i + 1), // Days 1â€“30
							datasets: [
								{
									label: "Person 1",
									data: [
										500, 1500, 3000, 3000, 3000, 4200, 5400,
										5400, 7000, 8600, 8600, 10000, 11500,
										11500, 13000, 14600, 16200, 17800,
										17800, 20000, 22000, 24000, 26000,
										28500, 31000, 33500, 36000, 38000,
										40000, 42000,
									],
									borderColor: "red",
									fill: false,
								},
								{
									label: "Person 2",
									data: [
										1000, 2000, 2000, 3800, 5600, 5600,
										7400, 9200, 11000, 11000, 12700, 14400,
										16000, 17600, 19200, 20800, 22400,
										24000, 24000, 26000, 28500, 31000,
										31000, 36000, 38500, 41000, 43500,
										45500, 47500, 49000,
									],
									borderColor: "blue",
									fill: false,
								},
								{
									label: "Person 3",
									data: [
										1200, 1200, 2400, 3600, 4800, 4800,
										6000, 7200, 7200, 7200, 9000, 10800,
										12600, 14400, 16000, 16000, 17500,
										19000, 20500, 22000, 23500, 25000,
										27000, 29000, 31000, 33000, 35000,
										37000, 39000, 39000,
									],
									borderColor: "green",
									fill: false,
								},
								{
									label: "Person 4",
									data: [
										0, 800, 1600, 1600, 1600, 2400, 3200,
										4000, 4000, 5500, 7000, 7000, 8500,
										10000, 11500, 13000, 14500, 16000,
										17500, 19000, 21000, 23000, 25000,
										25000, 25000, 26300, 27000, 28000,
										28000, 28000,
									],
									borderColor: "orange",
									fill: false,
								},
								{
									label: "Person 5",
									data: [
										2500, 3000, 5000, 7500, 10000, 10000,
										10000, 12500, 15000, 17500, 20000,
										22500, 22500, 25000, 27500, 30000,
										32500, 35000, 37500, 40000, 42000,
										44000, 46000, 47000, 48000, 49000,
										49500, 49800, 49900, 50000,
									],
									borderColor: "purple",
									fill: false,
								},
							],
						},
						options: {
							responsive: true,
							plugins: {
								title: {
									display: false,
									text: "Novel November Word Count",
									font: {
										family: "Plus Jakarta Sans",
										size: 18,
										weight: "600",
									},
								},
								legend: {
									display: false,
									labels: {
										font: {
											family: "Plus Jakarta Sans",
										},
									},
								},
							},
							scales: {
								x: {
									title: {
										display: true,
										text: "November 2025",
										font: {
											family: "Plus Jakarta Sans",
										},
									},
									min: 1,
									max: 30,
									ticks: {
										stepSize: 1,
										font: {
											family: "Plus Jakarta Sans",
										},
									},
								},
								y: {
									title: {
										display: true,
										text: "Word Count",
										font: {
											family: "Plus Jakarta Sans",
										},
									},
									min: 0,
									max: 50000,
									ticks: {
										stepSize: 5000,
										font: {
											family: "Plus Jakarta Sans",
										},
									},
								},
							},
						},
					})
				</script>
			</div>
		</section>
	</main>
</Layout>
